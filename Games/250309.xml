<?xml version="1.0" encoding="UTF-8"?>
<Game>
	<BGGID>250309</BGGID>
	<Name>Darwin's Choice</Name>
	<Strings>
		<Players_Capitalise>Players</Players_Capitalise>
		<Players_Lower>players</Players_Lower>
	</Strings>
	<Players>
		<Base min="2" max="6" default="4"></Base>
	</Players>
	<DisplayButtons>
		<Setup>
			<Name>Setup</Name>
			<Section>
				<Item>
					<Text>Remove one of the following pairs:</Text>
					<Display>
						<Players number="2" value="true"></Players>
					</Display>
				</Item>
				<Item>
					<Text>Savanna/Steppe</Text>
					<Display>
						<Players number="2" value="true"></Players>
					</Display>
				</Item>
				<Item>
					<Text>Wetland/Swamp</Text>
					<Display>
						<Players number="2" value="true"></Players>
					</Display>
				</Item>
				<Item>
					<Text>Ocean/Coral Reef</Text>
					<Display>
						<Players number="2" value="true"></Players>
					</Display>
				</Item>
				<Item>
					<Text>Taiga/Tundra</Text>
					<Display>
						<Players number="2" value="true"></Players>
					</Display>
				</Item>
				<Item>
					<Text>Tropical Rainforest/Cloud Forest</Text>
					<Display>
						<Players number="2" value="true"></Players>
					</Display>
				</Item>
				<Item>
					<Text>High Mountains/Highlands</Text>
					<Display>
						<Players number="2" value="true"></Players>
					</Display>
				</Item>
				<Item>
					<Text>Coast/Islands</Text>
					<Display>
						<Players number="2" value="true"></Players>
					</Display>
				</Item>
				<Item>
					<Text>Desert/Stone Desert</Text>
					<Display>
						<Players number="2" value="true"></Players>
					</Display>
				</Item>
				<Item>
					<Text>Polar Desert/Cold Desert</Text>
					<Display>
						<Players number="2" value="true"></Players>
					</Display>
				</Item>
				<Item>
					<Text>&lt;strong&gt;Biomes&lt;/strong&gt;: ${Players} biomes</Text>
					<Players number="2">3</Players>
					<Players number="3">4</Players>
					<Players number="4">4</Players>
					<Players number="5">5</Players>
					<Players number="6">5</Players>
				</Item>
				<Item>
					<Text>&lt;strong&gt;Trading Zone&lt;/strong&gt;: ${Players}</Text>
					<Players number="2">2 small cards and 2 large cards</Players>
					<Players number="3">3 small cards and 2 large cards</Players>
					<Players number="4">3 small cards and 3 large cards</Players>
					<Players number="5">4 small cards and 3 large cards</Players>
					<Players number="6">4 small cards and 4 large cards</Players>
				</Item>
			</Section>
		</Setup>
		<InGame>
			<Name>In Game</Name>
			<Section>
				<Heading>Food Evaluation</Heading>
				<Item><Text>Adaptation</Text></Item>
				<Item><Text>Competitive Strength</Text></Item>
				<Item><Text>Carnivores: Can least adapted edible species if at least same adaptation and competitive strength</Text></Item>
				<Item><Text>Simultaneous Eating: Which may lead to both animals unable to get enough food</Text></Item>
			</Section>
			<Section>
				<Heading>Era Scoring</Heading>
				<Item><Text>&lt;strong&gt;Survival&lt;/strong&gt;: 1 Darwin Point</Text></Item>
				<Item><Text>&lt;strong&gt;Adaptation&lt;/strong&gt;: Winning species gets Biome's amount of Darwin Points</Text></Item>
				<Item><Text>&lt;strong&gt;Competitive Strength&lt;/strong&gt;: Across all biomes, 3 most competitive gains 3/2/1 Darwin Points</Text></Item>
			</Section>
			<Section>
				<Heading>Transition Phase</Heading>
				<Item><Text>Event Card</Text></Item>
				<Item>
					<Text>Biome Change: ${Players} Biomes</Text>
					<Players number="2">1/2/2</Players>
					<Players number="3">2/3/3</Players>
					<Players number="4">2/3/3</Players>
					<Players number="5">3/4/4</Players>
					<Players number="6">3/4/4</Players>
				</Item>
				<Item>
					<Text>Biomes are reshuffled back in</Text>
					<Display>
						<Players number="2" value="true"></Players>
					</Display>
				</Item>
				<Item><Text>Renew Trading Zone</Text></Item>
				<Item><Text>Replenish Hands</Text></Item>
				<Item><Text>New First Player</Text></Item>
			</Section>
		</InGame>
	</DisplayButtons>
</Game>
